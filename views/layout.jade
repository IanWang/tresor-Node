	script.
		$(document).ready(function(){
			var current = window.location.href.split('/');
			var where = '/' + current[current.length-1];
			$('.nav li a').each(function(){
				var href = $(this).attr('href');
				if(where === href) {
					$('.nav li').removeClass("active");
					$(this).parent().addClass("active");
				}
			});
		});
						

