extends layout 

block content
	link(rel='stylesheet', href='css/user.css')
	.container-fluid
		.row-fluid(align='center')
			#board_left.span3
				#avatar
					img(src=user.img)
				#avatar_name
					span=user.name
			#board_right.span9
				.span12
					ul#mayTab.nav.nav-tabs
						li.active
							a#a(href='#my-item', data-toggle='tab') 我的商品
						li
							a#b(href='#my-follow', data-toggle='tab') 追蹤商品
						li
							a#c(href='#my-history', data-toggle='tab') 交易完成
					.btn-group#filter
						a.btn.dropdown-toggle(data-toggle='dropdown', href='#') 
							商品狀態&nbsp
							span.caret
						ul.dropdown-menu.pull-right
							li
								a(data-value='all') 全部
							li
								a(data-value='on') 拍賣中
							li
								a(data-value='closed') 結束
					.my-box.clearfix
						div(style='display:none;')
							#inline_content
								h4 loading...
						#my-item.active.span12
						#my-follow.span12
						#my-history.span12

block scripts
	script(src='js/lib/doT.min.js', type='text/javascript')
	script(src='js/user.js', type='text/javascript')


